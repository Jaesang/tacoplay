apiVersion: v1
kind: Service
metadata:
  labels:
    app: kiali
    release: istio
  name: kiali
  namespace: istio-system
spec:
  ports:
  - name: http-kiali
    port: 20001
    protocol: TCP
    targetPort: 20001
    nodePort: {{ kiali_port }}
  selector:
    app: kiali
  sessionAffinity: None
  type: NodePort
