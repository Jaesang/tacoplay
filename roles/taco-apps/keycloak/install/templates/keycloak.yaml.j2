global:
  storageClass: {{ rbd_provisioner_storage_class | default('rbd') }}
keycloak:
  ingress:
    enabled: true
    hosts:
      - {{ keycloak_domain }}
    tls:
      - hosts:
        - {{ keycloak_domain }}
        secretName: tls-keycloak
  persistence:
    deployPostgres: true
    dbVendor: postgres
  password: {{ keycloak_password | default('password') }}
postgresql:
  persistence:
    enabled: true
    accessModes:
      - ReadWriteOnce
    size: 20Gi
  postgresqlPassword: {{ keycloak_db_password | default('password') }}
